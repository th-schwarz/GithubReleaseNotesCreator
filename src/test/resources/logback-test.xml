<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

  <appender name="current"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{50} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="current"/>
  </root>
</configuration>